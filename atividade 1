import kotlin.time.Duration.Companion.seconds

fun main() {
    println("Bomba Relógio Iniciada!")
    println("-----------------------")

    // Loop para a contagem regressiva de 30 até 0 (inclusive)
    for (i in 30 downTo 0) {
        println("Tempo restante: $i")

        if (i > 0) {
            try {
                // Pausa por 1 segundo (1000 milissegundos)
                Thread.sleep(1.seconds.inWholeMilliseconds)
            } catch (e: InterruptedException) {
                // Lidar com a interrupção da thread, se necessário
                Thread.currentThread().interrupt()
                println("Contagem interrompida!")
                return
            }
        }
    }

    // Mensagem final após a contagem chegar a 0
    println("-----------------------")
    println("EXPLOSÃO")
}
